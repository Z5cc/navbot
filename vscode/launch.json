    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch_sim",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/bash",
            "args": [
                "-c",
                "source ${workspaceFolder}/install/setup.bash && ros2 launch navbot launch_sim.py"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "colcon",
            "postDebugTask": "kill_sim"
        },


        
        {
            "name": "launch_nodes",
            
            "type": "ros2",
            "request": "launch",
            "target": "/home/david/0-repo/ros2_ws/install/navbot/share/navbot/launch/launch_nodes.py",
            "launch": [
                "rviz",
                "gz",
                "gzclient",
                "gzserver"
            ]
        },
    ],


    "compounds": [
        {
            "name": "launch",
            "configurations": ["launch_sim", "launch_nodes"]
        }
    ]
}